{
  "name": "shopee-amazon-autopurchase",
  "private": true,
  "version": "1.0.0",
  "description": "Shopee to Amazon auto-purchase and auto-shipping platform (English/Japanese bilingual)",
  "workspaces": [
    "apps/api",
    "apps/web",
    "apps/worker",
    "packages/shared"
  ],
  "scripts": {
    "dev:api": "cd apps/api && ts-node-dev --respawn --transpile-only src/index.ts",
    "dev:web": "cd apps/web && next dev -p 3000",
    "dev:worker": "cd apps/worker && ts-node-dev --respawn --transpile-only src/index.ts",
    "lint": "eslint . --ext .ts,.tsx",
    "typecheck": "tsc -b",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "prepare": "husky",
    "postinstall": "npm run build --workspace @shopee-amazon/shared"
  },
  "devDependencies": {
    "@next/eslint-plugin-next": "^14.1.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.11.17",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.57.0",
    "eslint-plugin-react": "^7.33.2",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.1",
    "ts-jest": "^29.4.5",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  }
}
